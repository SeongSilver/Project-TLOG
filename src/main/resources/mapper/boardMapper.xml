<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tworaveler.tlog.board.BoardDAO">
	<!-- 글 작성 자유일기-->
<!-- 	<insert>
		insert into board(boardContent,userNum) 
		values(#{boardContent},#{userNum})
	</insert> -->
	
	<!-- 최신순으로 글 리스트 보이기 자유일기 -->
	<select id="selectRecent" resultType='com.tworaveler.tlog.board.BoardVO'>
		select a.boardContent,ip,b.userNick, date_format(a.writedate,'%y-%m-%d %H:%i') writedate from board a 
		join user b on b.userNum = a.userNum 
		order by boardNum desc 
		limit #{param1},#{param2}
	</select>
	
</mapper>